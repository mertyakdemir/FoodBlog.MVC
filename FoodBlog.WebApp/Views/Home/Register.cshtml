@using FoodBlog.Entities.ViewModels
@model RegisterViewModel

@{
    ViewBag.Title = "Register Page";
}

<link href="~/css/Login.css" rel="stylesheet" />

@using (Html.BeginForm())
{
    <div class="container">
        <div class="row row-my">

            <div class="main">

                <h3>Please Sign Up, or <a href="#">Login</a></h3>

                @Html.ValidationSummary(false)

                <form role="form">
                    <div class="form-group">
                        <label for="inputUsernameEmail">Username</label>
                        @Html.TextBoxFor(model => model.Username, new { @class = "form-control", id = "inputUsernameEmail", placeholder = "Username" })
                    </div>
                    <div class="form-group">
                        <label for="inputUsernameEmail">Email</label>
                        @Html.TextBoxFor(model => model.Email, new { @class = "form-control", id = "inputUsernameEmail", placeholder = "Email" })
                    </div>
                    <div class="form-group">
                        <label for="inputPassword">Password</label>
                        @Html.TextBoxFor(model => model.Password, new { @class = "form-control", id = "inputPassword", placeholder = "Password", type = "password" })
                    </div>
                    <div class="form-group">
                        <label for="inputPassword">Password Again</label>
                        @Html.TextBoxFor(model => model.ResPassword, new { @class = "form-control", id = "inputPassword", placeholder = "Password again", type = "password" })
                    </div>

                    <button type="submit" class="btn btn btn-primary">
                        Sign up
                    </button>
                </form>
            </div>

        </div>
    </div>
}


