
@{
    ViewBag.Title = "Error";
}

<main role="main" class="probootstrap-main js-probootstrap-main">
    <div class="container-fluid">
        <div class="row justify-content-center">
            <div class="col-md-8">
                @{ 
                    Exception exception = null;

                    if (TempData["AnyError"] != null)
                    {
                        exception = TempData["AnyError"] as Exception;
                    }
                }
                <h1>
                    Error
                </h1>

                    @if( exception != null) 
                    { 
                      <h2>@exception.Message</h2>
                    }

                 <h2>Please go to the homepage</h2>

                <a href="/" class="btn btn-sucess btn-lg active" role="button" aria-pressed="true" style="color:white; background-color:green">Homepage</a>
            </div>
        </div>

    </div>

</main>
