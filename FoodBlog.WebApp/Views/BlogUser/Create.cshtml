                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        @Html.ActionLink("Back To User List", "Index", "BlogUser", null, new { @class = "btn btn-warning" })
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <a href="/" class="btn btn-success">Homepage</a>
                    </div>
                </div>

            </div>
            }


            </div>
        </div>
    </div>
